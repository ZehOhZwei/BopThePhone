<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BopThePhone" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BopThePhone.Fullscreen" parent="Theme.BopThePhone">
        <item name="android:actionBarStyle">@style/Widget.Theme.BopThePhone.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BopThePhone.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>
</resources>